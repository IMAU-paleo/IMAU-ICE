&CONFIG

  ! Time steps and range
  ! ====================

  start_time_of_run_config                    = 0.0                              ! Start time (in years) of the simulations
  end_time_of_run_config                      = 20000.0                          ! End   time (in years) of the simulations
  dt_coupling_config                          = 1E20                             ! Interval of coupling (in years) between the four ice-sheets
  dt_max_config                               = 1.0                              ! Maximum time step (in years) of the ice model
  dt_min_config                               = 0.01                             ! Smallest allowed time step [yr]
  dt_startup_phase_config                     = 1.0                              ! Length of time window (in years) after start_time and before end_time when dt = dt_min, to ensure smooth restarts
  dt_thermo_config                            = 1.0                              ! Time step (in years) for updating thermodynamics
  dt_climate_config                           = 10.0                             ! Time step (in years) for updating the climate
  dt_ocean_config                             = 10.0                             ! Time step (in years) for updating the ocean
  dt_SMB_config                               = 10.0                             ! Time step (in years) for updating the SMB
  dt_BMB_config                               = 10.0                             ! Time step (in years) for updating the BMB
  dt_bedrock_ELRA_config                      = 100.0                            ! Time step (in years) for updating the bedrock deformation rate with the ELRA model
  dt_SELEN_config                             = 1000.0                           ! Time step (in years) for calling SELEN
  dt_output_config                            = 200.0                            ! Time step (in years) for writing help output
  dt_output_restart_config                    = 10000.0                          ! Time step (in years) for writing restart output

  ! Which ice sheets do we simulate?
  ! ================================

  do_NAM_config                               = .FALSE.                          ! North America
  do_EAS_config                               = .FALSE.                          ! Eurasia
  do_GRL_config                               = .FALSE.                          ! Greenland
  do_ANT_config                               = .TRUE.                           ! Antarctica

  ! Whether or not to let IMAU_ICE dynamically create its own output folder.
  ! This works fine locally, on LISA its better to use a fixed folder name.
  ! =======================================================================

  create_procedural_output_dir_config         = .FALSE.                          ! Automatically create an output directory with a procedural name (e.g. results_20210720_001/)
  fixed_output_dir_config                     = 'results_spinup'                 ! If not, create a directory with this name instead (stops the program if this directory already exists)
  fixed_output_dir_suffix_config              = ''                               ! Suffix to put after the fixed output directory name, useful when doing ensemble runs with the template+variation set-up
  do_write_regional_scalar_output_config      = .TRUE.
  do_write_global_scalar_output_config        = .TRUE.

  ! Debugging
  ! =========

  do_check_for_NaN_config                     = .TRUE.                           ! Whether or not fields should be checked for NaN values
  do_time_display_config                      = .FALSE.                          ! Print current model time to screen

  ! ISMIP-style output
  ! ==================

  do_write_ISMIP_output_config                = .FALSE.                          ! Whether or not to create a set of ISMIP output files
  ISMIP_output_group_code_config              = 'IMAU'                           ! Code for the group      name in the ISMIP output file names
  ISMIP_output_model_code_config              = 'IMAUICE'                        ! Code for the model      name in the ISMIP output file names
  ISMIP_output_experiment_code_config         = 'test'                           ! Code for the experiment name in the ISMIP output file names
  ISMIP_output_basetime_config                = 'YYYY-MM-DD'                     ! Basetime for the ISMIP output files (e.g. '1900-01-01')

  ! Grids
  ! =====

  ! Antarctica
  lambda_M_ANT_config                         = 0.0                              ! Longitude of the pole of the stereographic projection for the Antarctica domain [degrees east]
  phi_M_ANT_config                            = -90.0                            ! Latitude  of the pole of the stereographic projection for the Antarctica domain [degrees north]
  beta_stereo_ANT_config                      = 71.0                             ! Standard parallel     of the stereographic projection for the Antarctica domain [degrees]
  xmin_ANT_config                             = -3300000.0                       ! Western  boundary     of the Antarctica domain [m]
  xmax_ANT_config                             = 3300000.0                        ! Eastern  boundary     of the Antarctica domain [m]
  ymin_ANT_config                             = -3300000.0                       ! Southern boundary     of the Antarctica domain [m]
  ymax_ANT_config                             = 3300000.0                        ! Northern boundary     of the Antarctica domain [m]
  dx_ANT_config                               = 32000.0                          ! Horizontal resolution of the Antarctica domain [m]

  lambda_M_GRL_config                         = -45.0                            ! Longitude of the pole of the stereographic projection for the Greenland domain [degrees east]
  phi_M_GRL_config                            = 90.0                             ! Latitude  of the pole of the stereographic projection for the Greenland domain [degrees north]
  beta_stereo_GRL_config                      = 70.0                             ! Standard parallel     of the stereographic projection for the Greenland domain [degrees]
  xmin_GRL_config                             = -720000.0                        ! Western  boundary     of the Greenland domain [m]
  xmax_GRL_config                             = 960000.0                         ! Eastern  boundary     of the Greenland domain [m]
  ymin_GRL_config                             = -3450000.0                       ! Southern boundary     of the Greenland domain [m]
  ymax_GRL_config                             = -570000.0                        ! Northern boundary     of the Greenland domain [m]
  dx_GRL_config                               = 16000.0                          ! Horizontal resolution of the Greenland domain [m]

  ! Reference geometries (initial, present-day, and GIA equilibrium)
  ! ================================================================

  ! Initial geometry
  choice_refgeo_init_NAM_config               = 'realistic'                      ! Choice of initial geometry for North America; can be "idealised", "realistic", or "restart"
  choice_refgeo_init_EAS_config               = 'realistic'                      ! Choice of initial geometry for Eurasia      ; can be "idealised", "realistic", or "restart"
  choice_refgeo_init_GRL_config               = 'realistic'                      ! Choice of initial geometry for Greenland    ; can be "idealised", "realistic", or "restart"
  choice_refgeo_init_ANT_config               = 'realistic'                      ! Choice of initial geometry for Antarctica   ; can be "idealised", "realistic", or "restart"
  time_to_restart_from_NAM_config             = 0.0                              ! Can be different from C%start_time_of_run, though this will issue a warning
  time_to_restart_from_EAS_config             = 0.0
  time_to_restart_from_GRL_config             = 0.0
  time_to_restart_from_ANT_config             = 0.0
  choice_refgeo_init_idealised_config         = ''                               ! Choice of schematic initial geometry; see "generate_idealised_geometry" in reference_fields_module for options
  filename_refgeo_init_NAM_config             = 'Datasets/ETOPO1/NorthAmerica_ETOPO1_5km.nc'
  filename_refgeo_init_EAS_config             = 'Datasets/ETOPO1/Eurasia_ETOPO1_5km.nc'
  filename_refgeo_init_GRL_config             = 'Datasets/Bedmachine_Greenland/BedMachine_Greenland_v4_5km.nc'
  filename_refgeo_init_ANT_config             = 'Datasets/Bedmachine_Antarctica/Bedmachine_v3_Antarctica_5km.nc'
  do_read_velocities_from_restart_config      = .FALSE.

  ! Present-day geometry
  choice_refgeo_PD_NAM_config                 = 'realistic'                      ! Choice of present-day geometry for North America; can be "idealised", "realistic", or "restart"
  choice_refgeo_PD_EAS_config                 = 'realistic'                      ! Choice of present-day geometry for Eurasia      ; can be "idealised", "realistic", or "restart"
  choice_refgeo_PD_GRL_config                 = 'realistic'                      ! Choice of present-day geometry for Greenland    ; can be "idealised", "realistic", or "restart"
  choice_refgeo_PD_ANT_config                 = 'realistic'                      ! Choice of present-day geometry for Antarctica   ; can be "idealised", "realistic", or "restart"
  choice_refgeo_PD_idealised_config           = 'MISMIP+'                        ! Choice of schematic present-day geometry; see "generate_idealised_geometry" in reference_fields_module for options
  filename_refgeo_PD_NAM_config               = 'Datasets/ETOPO1/NorthAmerica_ETOPO1_5km.nc'
  filename_refgeo_PD_EAS_config               = 'Datasets/ETOPO1/Eurasia_ETOPO1_5km.nc'
  filename_refgeo_PD_GRL_config               = 'Datasets/Bedmachine_Greenland/BedMachine_Greenland_v4_5km.nc'
  filename_refgeo_PD_ANT_config               = 'Datasets/Bedmachine_Antarctica/Bedmachine_v3_Antarctica_5km.nc'

  ! GIA equilibrium geometry
  choice_refgeo_GIAeq_NAM_config              = 'realistic'                      ! Choice of GIA equilibrium geometry for North America; can be "idealised", "realistic", or "restart"
  choice_refgeo_GIAeq_EAS_config              = 'realistic'                      ! Choice of GIA equilibrium geometry for Eurasia      ; can be "idealised", "realistic", or "restart"
  choice_refgeo_GIAeq_GRL_config              = 'realistic'                      ! Choice of GIA equilibrium geometry for Greenland    ; can be "idealised", "realistic", or "restart"
  choice_refgeo_GIAeq_ANT_config              = 'realistic'                      ! Choice of GIA equilibrium geometry for Antarctica   ; can be "idealised", "realistic", or "restart"
  choice_refgeo_GIAeq_idealised_config        = 'MISMIP+'                        ! Choice of schematic GIA equilibrium geometry; see "generate_idealised_geometry" in reference_fields_module for options
  filename_refgeo_GIAeq_NAM_config            = 'Datasets/ETOPO1/NorthAmerica_ETOPO1_5km.nc'
  filename_refgeo_GIAeq_EAS_config            = 'Datasets/ETOPO1/Eurasia_ETOPO1_5km.nc'
  filename_refgeo_GIAeq_GRL_config            = 'Datasets/Bedmachine_Greenland/BedMachine_Greenland_v4_5km.nc'
  filename_refgeo_GIAeq_ANT_config            = 'Datasets/Bedmachine_Antarctica/Bedmachine_v3_Antarctica_5km.nc'

  remove_Lake_Vostok_config                   = .TRUE.

  ! Global forcing (insolation, CO2, d18O, geothermal heat flux)
  ! ============================================================

  ! Possible choice_forcing_method options:
  ! 'none'                 : No global forcing used at all; climate or SMB are fully parameterised or directly prescribed
  ! 'd18O_inverse_dT_glob' : Use the inverse routine with the specified d18O record to calculate a global temperature offset (e.g. de Boer et al., 2013)
  ! 'CO2_direct'           : Use the specified CO2 record to force the climate matrix (e.g. Berends et al., 2018)
  ! 'd18O_inverse_CO2'     : Use the inverse routine with the specified d18O record to calculate CO2 and then force the climate matrix (e.g. Berends et al., 2019)
  choice_forcing_method_config                = 'CO2_direct'

  ! Insolation forcing (NetCDF)
  choice_insolation_forcing_config            = 'realistic'                      ! Choice of insolation forcing: "none", "static", "realistic"
  static_insolation_time_config               = 0.0                              ! Keep insolation values fixed to this time when choice_insolation_forcing = 'static'
  filename_insolation_config                  = 'Datasets/Insolation/Laskar_etal_2004_insolation.nc'

  ! CO2 record (ASCII text file in kyr, so the number of rows needs to be specified)
  filename_CO2_record_config                  = 'Datasets/CO2/EPICA_CO2_Bereiter_2015_100yr.dat'
  CO2_record_length_config                    = 8001

  ! Geothermal heat flux
  choice_geothermal_heat_flux_config          = 'spatial'                        ! Choice of geothermal heat flux; can be 'constant' or 'spatial'
  constant_geothermal_heat_flux_config        = 1.72E06                          ! Geothermal Heat flux [J m^-2 yr^-1] Sclater et al. (1980)
  filename_geothermal_heat_flux_config        = 'Datasets/GHF/geothermal_heatflux_ShapiroRitzwoller2004_global_1x1_deg.nc'

  ! Ice dynamics - velocity
  ! =======================

  choice_ice_dynamics_config                  = 'SIA/SSA'                        ! Choice of ice-dynamics approximation: "none" (= fixed geometry), "SIA", "SSA", "SIA/SSA", "DIVA"
  n_flow_config                               = 3.0                              ! Exponent in Glen`s flow law
  m_enh_sheet_config                          = 1.0                              ! Ice flow enhancement factor for grounded ice
  m_enh_shelf_config                          = 0.5                              ! Ice flow enhancement factor for floating ice
  choice_ice_margin_config                    = 'infinite_slab'                  ! Choice of ice margin boundary conditions: "BC", "infinite_slab"
  include_SSADIVA_crossterms_config           = .TRUE.                           ! Whether or not to include the "cross-terms" of the SSA/DIVA
  do_GL_subgrid_friction_config               = .TRUE.                           ! Whether or not to scale basal friction with the sub-grid grounded fraction (needed to get proper GL migration; only turn this off for showing the effect on the MISMIP_mod results!)
  do_smooth_geometry_config                   = .TRUE.                           ! Whether or not to smooth the model geometry (bedrock + initial ice thickness)
  r_smooth_geometry_config                    = 0.5                              ! Geometry smoothing radius (in number of grid cells)

  ! Some parameters for numerically solving the SSA/DIVA
  DIVA_visc_it_norm_dUV_tol_config            = 1E-2                             ! Successive solutions of UV in the effective viscosity iteration must not differ by more than this amount (on average)
  DIVA_visc_it_nit_config                     = 50                               ! Maximum number of effective viscosity iterations
  DIVA_visc_it_relax_config                   = 0.2                              ! Relaxation parameter for subsequent viscosity iterations (for improved stability)
  DIVA_epsilon_sq_0_config                    = 1E-15                            ! Normalisation term so that zero velocity gives non-zero viscosity
  DIVA_visc_eff_min_config                    = 1E4                              ! Minimum value for effective viscosity
  DIVA_beta_max_config                        = 1E20                             ! Maximum value for basal friction coefficient
  DIVA_beta_min_thin_ice_config               = 1000.0                           ! Minimum value for effective basal friction over thin-ice areas
  DIVA_beta_min_thin_ice_H0_config            = 200.0                            ! Threshold thinness below which a minimum beta limit starts to apply
  DIVA_vel_max_config                         = 5000.0                           ! DIVA velocities are limited to this value
  DIVA_boundary_BC_u_west_config              = 'infinite'                       ! Boundary conditions for the ice velocity field at the domain boundary in the DIVA
  DIVA_boundary_BC_u_east_config              = 'infinite'                       ! Allowed choices: "infinite", "periodic", "zero"
  DIVA_boundary_BC_u_south_config             = 'infinite'
  DIVA_boundary_BC_u_north_config             = 'infinite'
  DIVA_boundary_BC_v_west_config              = 'infinite'                       ! Boundary conditions for the ice velocity field at the domain boundary in the DIVA
  DIVA_boundary_BC_v_east_config              = 'infinite'
  DIVA_boundary_BC_v_south_config             = 'infinite'
  DIVA_boundary_BC_v_north_config             = 'infinite'
  DIVA_choice_matrix_solver_config            = 'PETSc'                          ! Choice of matrix solver for the ice velocity equations: "SOR", "PETSc"
  DIVA_SOR_nit_config                         = 10000                            ! DIVA SOR   solver - maximum number of iterations
  DIVA_SOR_tol_config                         = 2.5                              ! DIVA SOR   solver - stop criterion, absolute difference
  DIVA_SOR_omega_config                       = 1.3                              ! DIVA SOR   solver - over-relaxation parameter
  DIVA_PETSc_rtol_config                      = 1e-3                             ! DIVA PETSc solver - stop criterion, relative difference (iteration stops if rtol OR abstol is reached)
  DIVA_PETSc_abstol_config                    = 1e-3                             ! DIVA PETSc solver - stop criterion, absolute difference

  ! Ice dynamics - time integration
  ! ===============================

  choice_timestepping_config                  = 'direct'                         ! Choice of timestepping method: "direct", "pc" (NOTE: 'direct' does not work with DIVA ice dynamcis!)
  choice_ice_integration_method_config        = 'explicit'                       ! Choice of ice thickness integration scheme: "none" (i.e. unchanging geometry), "explicit", "semi-implicit"
  dHi_choice_matrix_solver_config             = 'SOR'                            ! Choice of matrix solver for the semi-implicit ice thickness equation: "SOR", "PETSc"
  dHi_SOR_nit_config                          = 3000                             ! dHi SOR   solver - maximum number of iterations
  dHi_SOR_tol_config                          = 0.001                            ! dHi SOR   solver - stop criterion, absolute difference
  dHi_SOR_omega_config                        = 0.001                            ! dHi SOR   solver - over-relaxation parameter
  dHi_PETSc_rtol_config                       = 0.001                            ! dHi PETSc solver - stop criterion, relative difference (iteration stops if rtol OR abstol is reached)
  dHi_PETSc_abstol_config                     = 0.001                            ! dHi PETSc solver - stop criterion, absolute difference

  ! Predictor-corrector ice-thickness update
  pc_epsilon_config                           = 0.01                             ! Target truncation error in dHi_dt [m/yr] (epsilon in Robinson et al., 2020, Eq. 33)
  pc_k_I_config                               = 0.2                              ! Exponent k_I in  Robinson et al., 2020, Eq. 33
  pc_k_p_config                               = 0.2                              ! Exponent k_p in  Robinson et al., 2020, Eq. 33
  pc_eta_min_config                           = 1E-8                             ! Normalisation term in estimation of the truncation error (Robinson et al., Eq. 32)
  pc_max_timestep_iterations_config           = 5                                ! Maximum number of iterations of each time step
  pc_redo_tol_config                          = 10.0                             ! Maximum allowed truncation error (any higher and the timestep is decreased)

  ! Ice thickness boundary conditions
  ice_thickness_west_BC_config                = 'zero'                           ! Choice of boundary conditions for ice thickness at the domain boundary: "infinite", "periodic", "zero", "fixed"
  ice_thickness_east_BC_config                = 'zero'
  ice_thickness_south_BC_config               = 'zero'
  ice_thickness_north_BC_config               = 'zero'
  choice_mask_noice_NAM_config                = 'NAM_remove_GRL'                 ! Choice of mask_noice configuration
  choice_mask_noice_EAS_config                = 'EAS_remove_GRL'
  choice_mask_noice_GRL_config                = 'GRL_remove_Ellesmere'
  choice_mask_noice_ANT_config                = 'none'                           ! For Antarctica, additional choices are included for certain idealised-geometry experiments: "MISMIP_mod", "MISMIP+"

  ! Fixed/delayed ice thickness evolution
  fixed_sheet_geometry_config                 = 0.0                              ! Fix (1), release (0), or delay grounded ice geometry evolution
  fixed_shelf_geometry_config                 = 1.0                              ! Fix (1), release (0), or delay floating ice geometry evolution
  fixed_grounding_line_g_config               = 0.0                              ! Fix (1), release (0), or delay GL geometry evolution (grounded side)
  fixed_grounding_line_f_config               = 0.0                              ! Fix (1), release (0), or delay GL geometry evolution (floating side)
  fixed_decay_t_start_config                  = 100.0                            ! Start time of linear transition between fixed/delayed and free evolution
  fixed_decay_t_end_config                    = 500.0                            ! End   time of linear transition between fixed/delayed and free evolution
  relax_thick_t_start_config                  = -9.9e99                          ! Start time of ice thickness relaxation: no fixiness/MB; refgeo_PD set to relaxed geometry
  relax_thick_t_end_config                    = 100.0                            ! End   time of ice thickness relaxation: no fixiness/MB; refgeo_PD set to relaxed geometry

  do_target_dhdt_config                       = .FALSE.                           ! Whether or not to perform spinup using a target dHi_dt field
  target_dhdt_filename_config                 = 'Datasets/dHdt_Antarctica/dHdt_antarctica_4km.nc' ! NetCDF file containing target dHi_dt for model spinup
  target_dhdt_t_end_config                    = 20000.0                          ! Time at which the target dHi_dt field is released into the wild

  ! Ice dynamics - basal conditions and sliding
  ! ===========================================

  ! Sliding laws
  choice_sliding_law_config                   = 'Zoet-Iverson'                   ! Choice of sliding law: "no_sliding", "idealised", "Coulomb", "Coulomb_regularised", "Weertman", "Tsai2015", "Schoof2005", "Zoet-Iverson"
  choice_idealised_sliding_law_config         = ''                               ! "ISMIP_HOM_C", "ISMIP_HOM_D", "ISMIP_HOM_E", "ISMIP_HOM_F"
  slid_delta_v_config                         = 1.0E-3                           ! Normalisation parameter to prevent errors when velocity is zero
  slid_Weertman_m_config                      = 3.0                              ! Exponent in Weertman sliding law
  slid_Coulomb_reg_q_plastic_config           = 0.3                              ! Scaling exponent   in regularised Coulomb sliding law
  slid_Coulomb_reg_u_threshold_config         = 100.0                            ! Threshold velocity in regularised Coulomb sliding law
  slid_ZI_ut_config                           = 200.0                            ! (uniform) transition velocity used in the Zoet-Iverson sliding law [m/yr]
  slid_ZI_p_config                            = 5.0                              ! Velocity exponent             used in the Zoet-Iverson sliding law
  do_slid_ZI_no_angle_config                  = .TRUE.                           ! If .TRUE., use phi_fric as a fraction (i.e./e.g. [0 1]) instead of an angle. Adjust its limits accordingly elsewhere.
  include_basal_freezing_config               = .TRUE.                           ! If .TRUE., no basal sliding is allowed when the basal temperature is more than [deltaT_basal_freezing] below the pressure melting point
  deltaT_basal_freezing_config                = 2.0                              ! See above.
  subgrid_friction_exponent_config            = 1.0                              ! Exponent to which f_grnd should be raised before being used to scale beta

  ! Basal hydrology
  choice_basal_hydrology_config               = 'Martin2011'                     ! Choice of basal conditions: "saturated", "Martin2011"
  Martin2011_hydro_N_lim_config               = 0.0                              ! Martin et al. (2011) basal hydrology model: limit pore water pressure w.r.t. overburden [1=100% allowed; 0=no hydrology; 0.96 used in ref. paper]
  Martin2011_hydro_Hb_min_config              = 0.0                              ! Martin et al. (2011) basal hydrology model: low-end  Hb  value of bedrock-dependent pore-water pressure
  Martin2011_hydro_Hb_max_config              = 1000.0                           ! Martin et al. (2011) basal hydrology model: high-end Hb  value of bedrock-dependent pore-water pressure

  ! Basal roughness / friction
  choice_basal_roughness_config               = 'uniform'                        ! "uniform"", parameterised", "prescribed"
  uniform_Weertman_beta_sq_config             = 1.0E4                            ! Uniform value for beta_sq  in Weertman sliding law
  uniform_Coulomb_phi_fric_config             = 1.0                              ! Uniform value for phi_fric in (regularised) Coulomb sliding law
  uniform_Tsai2015_alpha_sq_config            = 0.5                              ! Uniform value for alpha_sq in Tsai2015 sliding law
  uniform_Tsai2015_beta_sq_config             = 1.0E4                            ! Uniform value for beta_sq  in Tsai2015 sliding law
  uniform_Schoof2005_alpha_sq_config          = 0.5                              ! Uniform value for alpha_sq in Schoof2005 sliding law
  uniform_Schoof2005_beta_sq_config           = 1.0E4                            ! Uniform value for beta_sq  in Schoof2005 sliding law
  choice_param_basal_roughness_config         = 'Martin2011'                     ! "Martin2011", "SSA_icestream", "MISMIP+"
  Martin2011till_phi_Hb_min_config            = 0.0                              ! Martin et al. (2011) bed roughness model: low-end  Hb  value of bedrock-dependent till friction angle
  Martin2011till_phi_Hb_max_config            = 1000.0                           ! Martin et al. (2011) bed roughness model: high-end Hb  value of bedrock-dependent till friction angle
  Martin2011till_phi_min_config               = 5.0                              ! Martin et al. (2011) bed roughness model: low-end  phi value of bedrock-dependent till friction angle
  Martin2011till_phi_max_config               = 20.0                             ! Martin et al. (2011) bed roughness model: high-end phi value of bedrock-dependent till friction angle
  basal_roughness_filename_config             = ''                               ! NetCDF file containing a basal roughness field for the chosen sliding law
  do_smooth_phi_restart_config                = .FALSE.                          ! Whether or not to smooth the prescribed bed roughness once (crucial for downscaling runs)
  r_smooth_phi_restart_config                 = 0.5                              ! Prescribed bed roughness smoothing radius (in number of grid cells)

  ! Basal inversion
  do_BIVgeo_config                            = .TRUE.                           ! Whether or not to perform a geometry-based basal inversion (following Pollard & DeConto, 2012)
  BIVgeo_t_start_config                       = -9.9e9                           ! Minimum model time when the inversion is allowed
  BIVgeo_t_end_config                         = 15000.0                          ! Maximum model time when the inversion is allowed
  choice_BIVgeo_method_config                 = 'Pien2023'                       ! Choice of geometry-based inversion method: "PDC2012", "Lipscomb2021", "CISM+", "Berends2022", "Bernales2017"
  BIVgeo_dt_config                            = 5.0                              ! Time step      for bed roughness updates in the PDC2012 geometry-based basal inversion method [yr]
  BIVgeo_PDC2012_hinv_config                  = 500.0                            ! Scaling factor for bed roughness updates in the PDC2012 geometry-based basal inversion method [m]
  BIVgeo_Lipscomb2021_tauc_config             = 500.0                            ! Timescale       in the Lipscomb2021 geometry-based basal inversion method [yr]
  BIVgeo_Lipscomb2021_H0_config               = 100.0                            ! Thickness scale in the Lipscomb2021 geometry-based basal inversion method [m]
  BIVgeo_CISMplus_wH_config                   = 1.0                              ! Weighting factor for ice thickness in the CISM+ geometry/velocity-based basal inversion method
  BIVgeo_CISMplus_wu_config                   = 1.0                              ! Weighting factor for velocity      in the CISM+ geometry/velocity-based basal inversion method
  BIVgeo_CISMplus_tauc_config                 = 500.0                            ! Timescale       in the CISM+ geometry/velocity-based basal inversion method [yr]
  BIVgeo_CISMplus_H0_config                   = 100.0                            ! Thickness scale in the CISM+ geometry/velocity-based basal inversion method [m]
  BIVgeo_CISMplus_u0_config                   = 10.0                             ! Velocity  scale in the CISM+ geometry/velocity-based basal inversion method [m/yr]
  BIVgeo_Berends2022_tauc_config              = 10.0                             ! Timescale       in the Berends2022 geometry/velocity-based basal inversion method [yr]
  BIVgeo_Berends2022_H0_config                = 100.0                            ! First  thickness scale in the Berends2022 geometry/velocity-based basal inversion method [m]
  BIVgeo_Berends2022_u0_config                = 250.0                            ! First  velocity  scale in the Berends2022 geometry/velocity-based basal inversion method [m/yr]
  BIVgeo_Berends2022_Hi_scale_config          = 300.0                            ! Second thickness scale in the Berends2022 geometry/velocity-based basal inversion method [m]
  BIVgeo_Berends2022_u_scale_config           = 3000.0                           ! Second velocity  scale in the Berends2022 geometry/velocity-based basal inversion method [m/yr]
  BIVgeo_Berends2022_phimin_config            = 0.1                              ! Smallest allowed value for the inverted till friction angle phi
  BIVgeo_Berends2022_phimax_config            = 30.0                             ! Largest  allowed value for the inverted till friction angle phi
  BIVgeo_target_velocity_filename_config      = ''                               ! NetCDF file where the target velocities are read in the CISM+ and Berends2022 geometry/velocity-based basal inversion methods
  BIVgeo_filename_output_config               = 'bed_roughness_inv.nc'           ! NetCDF file where the final inverted basal roughness will be saved
  BIVgeo_Bernales2017_hinv_config             = 100.0                            ! Scaling factor for bed roughness updates in the Bernales (2017) geometry-based basal inversion method [m]
  BIVgeo_Bernales2017_tol_diff_config         = 100.0                            ! Minimum ice thickness difference [m] that triggers inversion (.OR. &)
  BIVgeo_Bernales2017_tol_frac_config         = 1.0                              ! Minimum ratio between ice thickness difference and reference value that triggers inversion
  BIVgeo_Pien2023_H0_config                   = 500.0                            ! Ice thickness scale for regularisation in Pien`s friction inversion method
  BIVgeo_Pien2023_tau_config                  = 200.0                            ! Time scale for regularisation in Pien`s friction inversion method
  BIVgeo_Pien2023_r_config                    = 0.00                             ! Relaxation scale for regularisation in Pien`s friction inversion method
  BIVgeo_Pien2023_lowerHb_config              = -1000.0                          ! Lower bedrock limit for target relaxation friction in Pien`s friction inversion method
  BIVgeo_Pien2023_upperHb_config              = +1000.0                          ! Upper bedrock limit for target relaxation friction in Pien`s friction inversion method
  BIVgeo_Pien2023_min_config                  = 1E-3                             ! Lower till friction angle limit in Pien`s friction inversion method
  BIVgeo_Pien2023_max_config                  = 2.0                              ! Upper till friction angle limit in Pien`s friction inversion method

  ! Ice dynamics - calving
  ! ======================

  choice_calving_law_config                   = 'threshold_thickness'            ! Choice of calving law: "none", "threshold_thickness"
